<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_var_total_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="544dp"
        android:text="@string/var_total_weather"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_var_wind"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_lbl_total_weather"
        android:layout_width="wrap_content"
        android:layout_height="18dp"

        android:layout_marginTop="16dp"
        android:text="@string/lbl_total_weather"
        app:layout_constraintStart_toStartOf="@+id/textView_lbl_wind"
        app:layout_constraintTop_toBottomOf="@+id/textView_lbl_wind" />

    <TextView
        android:id="@+id/textView_var_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/var_wind"
        app:layout_constraintStart_toStartOf="@+id/textView_var_total_weather"
        app:layout_constraintTop_toBottomOf="@+id/textView_var_temp" />

    <TextView
        android:id="@+id/textView_lbl_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/lbl_wind"
        app:layout_constraintStart_toStartOf="@+id/textView_lbl_temp"
        app:layout_constraintTop_toBottomOf="@+id/textView_lbl_temp" />

    <TextView
        android:id="@+id/textView_ApplicationName"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginTop="8dp"
        android:text="@string/app_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_lbl_Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="100dp"
        android:text="@string/lbl_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_var_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/var_location"
        app:layout_constraintStart_toStartOf="@+id/textView_var_temp"
        app:layout_constraintTop_toTopOf="@+id/textView_lbl_Location" />

    <TextView
        android:id="@+id/textView_lbl_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/lbl_temp"
        app:layout_constraintStart_toStartOf="@+id/textView_lbl_Location"
        app:layout_constraintTop_toBottomOf="@+id/textView_lbl_Location" />

    <TextView
        android:id="@+id/textView_var_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/var_temp"
        app:layout_constraintStart_toStartOf="@+id/textView_var_wind"
        app:layout_constraintTop_toBottomOf="@+id/textView_var_location" />

</android.support.constraint.ConstraintLayout>